# ===================================
# Teddy API - Environment Variables
# ===================================

# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:4200

# Database - Write Connection (Commands)
DB_WRITE_HOST=localhost
DB_WRITE_PORT=5432
DB_WRITE_USERNAME=postgres
DB_WRITE_PASSWORD=postgres
DB_WRITE_DATABASE=app_db
DB_WRITE_SYNC=false
DB_WRITE_LOGGING=true

# Database - Read Connection (Queries)
DB_READ_HOST=localhost
DB_READ_PORT=5432
DB_READ_USERNAME=postgres
DB_READ_PASSWORD=postgres
DB_READ_DATABASE=app_db
DB_READ_SYNC=false
DB_READ_LOGGING=true
DB_READ_POOL_SIZE=20

# JWT Authentication
JWT_SECRET=change-this-to-a-strong-random-string-in-production
JWT_EXPIRES_IN=24h

# Redis (opcional - para cache futuro)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Logging
LOG_LEVEL=debug
